<div class="bg">
  <h2 class="title2">Login</h2>

  <form class="login uk-margin" action="/auth/login" method="POST" id="form-container">
    <label for="username">Username</label>
    <input class="uk-input uk-form-width-medium uk-form-small" id="username" type="text" name="username" placeholder="JonSnow">

    <br><br>

    <label for="password uk-margin">Password</label>
    <input class="uk-input uk-form-width-medium uk-form-small" id="password" type="password" name="password" placeholder="Your password">
    <br>
    {{#if message }}
      <div class="error-message">{{ message }}</div>
    {{/if}}

    <br><br>

    <button class="buttn">Login</button>
      <div class="txt"> 
      <p class="account-message">
        Don't have an account yet?
        <a href="/auth/signup">    Signup</a>
      </p>
    </div>
  </form>
</div>
