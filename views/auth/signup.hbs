 <div class="bg"> 
  <h2 class="title2">Signup</h2>

  <form class="login uk-margin" action="/auth/signup" method="POST" id="form-container">
  Name:
    <div class="uk-inline">
      <span class="uk-form-icon" uk-icon="icon: user"></span>
      <input class="uk-input uk-form-width-medium uk-form-small" id="name" type="text" name="name" placeholder="Jon">
    </div>
    <br><br>
    Lastname:
    <div class="uk-inline">
      <span class="uk-form-icon" uk-icon="icon: users"></span>
      <input class="uk-input uk-form-width-medium uk-form-small" id="lastname" type="text" name="lastname" placeholder="Snow">
    </div>
    <br><br>
    Email:
    <div class="uk-inline">
      <span class="uk-form-icon" uk-icon="icon: mail"></span>
      <input class="uk-input uk-form-width-medium uk-form-small" id="email" type="text" name="email" placeholder="JonSnow@got.com">
    </div>
    <br><br>
    Password:
    <div class="uk-inline">
      <span class="uk-form-icon" uk-icon="icon: lock"></span>
      <input class="uk-input uk-form-width-medium uk-form-small" id="password" type="password" name="password" placeholder="Your password">
    </div>
    <br>
    <hr class="uk-divider-small">
    {{#if message }}
      <div class="error-message">{{ message }}</div>
    {{/if}}

    <br>

    <button class="buttn">Create account</button>
    <div class="txt">
      <p class="account-message">
        Do you already have an account?
        <a href="/auth/login">Login</a>
      </p>
    </div>
  </form>
</div>
